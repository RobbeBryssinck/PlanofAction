@model PlanofAction.Models.ActionPlan

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>ActionPlan</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Action plan ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ActionPlanID)
            </dd>
            <dt class="col-sm-2">
                Account ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountID)
            </dd>
            <dt class="col-sm-2">
                Plan title
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PlanTitle)
            </dd>
            <dt class="col-sm-2">
                Plan message
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PlanMessage)
            </dd>
            <dt class="col-sm-2">
                Plan category
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PlanCategory)
            </dd>
            <dt class="col-sm-2">
                Date created
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PlanDateCreated)
            </dd>
        </dl>

        <form method="post" asp-action="DeletePost">
            @Html.HiddenFor(m => Model.ActionPlanID)
            <input type="submit" class="btn btn-danger" asp-action="DeletePost" />
        </form>
        <a asp-action="Index">Back to List</a>
    </div>
</div>