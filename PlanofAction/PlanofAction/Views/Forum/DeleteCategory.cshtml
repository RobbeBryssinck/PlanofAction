@model ForumCategory

@{
    ViewData["Title"] = "Delete category";
}

<div class="container">
    <h1>Delete category</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Forum category ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ForumCategoryID)
            </dd>
            <dt class="col-sm-2">
                Forum category
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ForumCategoryString)
            </dd>
        </dl>

        <form method="post" asp-action="DeletePost">
            @Html.HiddenFor(m => Model.ForumCategoryID)
            <input type="submit" class="btn btn-danger" asp-action="DeleteCategoryPost" /> |
        </form>
        <a asp-action="Index">Back to forum</a>
    </div>
</div>
