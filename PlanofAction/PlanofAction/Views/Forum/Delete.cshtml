@model ForumThread

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1>Delete thread</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Thread</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Thread ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThreadID)
            </dd>
            <dt class="col-sm-2">
                Account ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountID)
            </dd>
            <dt class="col-sm-2">
                Thread title
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThreadTitle)
            </dd>
            <dt class="col-sm-2">
                Thread category
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.ForumCategoryString)
            </dd>
            <dt class="col-sm-2">
                Thread date created
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThreadDateCreated)
            </dd>
        </dl>

        <form method="post" asp-action="DeletePost">
            @Html.HiddenFor(m => Model.ThreadID)
            <input type="submit" class="btn btn-danger" asp-action="DeletePost" /> |
        </form>
        <a asp-action="Index">Back to forum</a>
    </div>
</div>
