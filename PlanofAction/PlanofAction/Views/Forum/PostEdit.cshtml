@model PostEditViewModel

@{
    ViewData["Title"] = "Edit post";
}

<div class="container">
    <h1>Edit post</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="PostEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PostMessage" class="control-label">Message</label>
                    <textarea asp-for="PostMessage" class="form-control" cols="25" rows="3"></textarea>
                    <span asp-validation-for="PostMessage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PostID" type="hidden" />
                    <input asp-for="ThreadID" type="hidden" />
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to forum</a>
    </div>
</div>
